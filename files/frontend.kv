<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10 
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0 

        Button:
            id: start_stop
            text: "Start Camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_normal: "App-4-Webcam-Photo-Sharer/images/normal.png"
            background_down: "App-4-Webcam-Photo-Sharer/images/down.png"

        Button:
            text: "Capture"
            on_press: root.capture()
            size_hint_y: 0.1
            background_normal: "App-4-Webcam-Photo-Sharer/images/normal.png"
            background_down: "App-4-Webcam-Photo-Sharer/images/down.png"
            


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10 
        spacing: 10
        Image:
            id: img     
            size_hint_y: 0.7
        
        Button:
            text: "Create Sharable Link"
            on_press: root.create_link()
            size_hint_y: 0.1
            background_normal: "App-4-Webcam-Photo-Sharer/images/normal.png"
            background_down: "App-4-Webcam-Photo-Sharer/images/down.png"
            

        Label:
            id: link
            text: ""
            size_hint_y: 0.1


        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: "Copy Link"
                on_press: root.copy_link()
                background_normal: "App-4-Webcam-Photo-Sharer/images/normal.png"
                background_down: "App-4-Webcam-Photo-Sharer/images/down.png"
            

            Button: 
                text: "Open Link"
                on_press: root.open_link()
                background_normal: "App-4-Webcam-Photo-Sharer/images/normal.png"
                background_down: "App-4-Webcam-Photo-Sharer/images/down.png"
            


<RootWidget>
    canvas.before: 
        Color:
            rgba: (0.1, 0.4, 0.3, 1)
        Rectangle:
            pos: self.pos
            size: self.size 
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"